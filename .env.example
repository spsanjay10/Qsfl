# QSFL-CAAD Environment Configuration Example
# Copy this file to .env and modify values as needed

# System Configuration
QSFL_ENVIRONMENT=development
QSFL_DEBUG=false
QSFL_SERVER_HOST=localhost
QSFL_SERVER_PORT=8080
QSFL_SECRET_KEY=change-me-in-production

# Cryptography Configuration
QSFL_CRYPTO_KYBER_SECURITY_LEVEL=3
QSFL_CRYPTO_KYBER_USE_SIMULATION=false
QSFL_CRYPTO_DILITHIUM_SECURITY_LEVEL=3
QSFL_CRYPTO_DILITHIUM_USE_SIMULATION=false
QSFL_CRYPTO_KEY_ROTATION_INTERVAL_HOURS=24
QSFL_CRYPTO_KEY_STORAGE_PATH=./keys

# Authentication Configuration
QSFL_AUTH_CREDENTIAL_VALIDITY_HOURS=168
QSFL_AUTH_MAX_AUTHENTICATION_FAILURES=3
QSFL_AUTH_LOCKOUT_DURATION_MINUTES=30
QSFL_AUTH_REVOCATION_CHECK_INTERVAL_MINUTES=5

# Anomaly Detection Configuration
QSFL_ANOMALY_CONTAMINATION_RATE=0.1
QSFL_ANOMALY_N_ESTIMATORS=100
QSFL_ANOMALY_MAX_SAMPLES=auto
QSFL_ANOMALY_ANOMALY_THRESHOLD=0.5
QSFL_ANOMALY_QUARANTINE_THRESHOLD=0.8
QSFL_ANOMALY_REPUTATION_DECAY_FACTOR=0.95
QSFL_ANOMALY_MIN_REPUTATION_SCORE=0.1
QSFL_ANOMALY_SHAP_MAX_EVALS=100

# Federated Learning Configuration
QSFL_FL_MIN_CLIENTS_PER_ROUND=3
QSFL_FL_MAX_CLIENTS_PER_ROUND=10
QSFL_FL_ROUNDS_PER_EPOCH=1
QSFL_FL_AGGREGATION_METHOD=fedavg
QSFL_FL_USE_REPUTATION_WEIGHTING=true
QSFL_FL_MODEL_ARCHITECTURE=cnn
QSFL_FL_LEARNING_RATE=0.01
QSFL_FL_BATCH_SIZE=32
QSFL_FL_LOCAL_EPOCHS=1

# Monitoring Configuration
QSFL_MONITORING_LOG_LEVEL=INFO
QSFL_MONITORING_LOG_FILE_PATH=./logs/qsfl.log
QSFL_MONITORING_LOG_ROTATION_SIZE_MB=100
QSFL_MONITORING_LOG_RETENTION_DAYS=30
QSFL_MONITORING_METRICS_COLLECTION_INTERVAL_SECONDS=60
QSFL_MONITORING_METRICS_RETENTION_DAYS=90
QSFL_MONITORING_ENABLE_ALERTS=true

# Database Configuration
QSFL_DB_DATABASE_URL=sqlite:///./qsfl.db
QSFL_DB_CONNECTION_POOL_SIZE=5
QSFL_DB_CONNECTION_TIMEOUT_SECONDS=30